{
  "name": "lenbrary-server",
  "private": true,
  "description": "Asset management server built with Express",
  "homepage": "https://github.com/YOUR_USERNAME/YOUR_REPO#readme",
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/YOUR_REPO/issues"
  },
  "license": "MIT",
  "author": "Author Name <author.name@mail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YOUR_USERNAME/YOUR_REPO.git"
  },
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "cross-env NODE_OPTIONS=\"--import @oxc-node/core/register\" vitest run",
    "pretest": "npm run lint",
    "test:coverage": "cross-env NODE_OPTIONS=\"--import @oxc-node/core/register\" vitest run --coverage",
    "lint": "oxlint --type-aware src/",
    "typecheck": "tsc",
    "build": "tsc",
    "clean": "tsc -b --clean && rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "migrate": "tsx bin/migrate.ts",
    "migration": "tsx bin/migrate.ts",
    "migrate:status": "tsx bin/migrate.ts status",
    "migrate:up": "tsx bin/migrate.ts up",
    "migrate:down": "tsx bin/migrate.ts down",
    "migrate:info": "tsx bin/migrate.ts info",
    "migrate:create": "tsx bin/migrate.ts create"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "file-type": "^19.6.0",
    "multer": "^2.0.2",
    "sharp": "^0.33.5",
    "uuid": "^11.0.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@oxc-node/core": "^0.0.35",
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "24",
    "@types/uuid": "^11.0.0",
    "@vitest/coverage-v8": "4",
    "cross-env": "10",
    "oxlint": "1",
    "oxlint-tsgolint": "0.11.4",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "5",
    "vitest": "4"
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "packageManager": "npm@10.9.4"
}
